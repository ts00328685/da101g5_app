<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="10dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="3dp">

    <!-- cardCornerRadius：設定卡片邊角弧度-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/cv_pts_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="老師:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_4"
            card_view:layout_constraintTop_toBottomOf="@+id/cv_pts_4" />

        <TextView
            android:id="@+id/cv_appointment_teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="施樂融"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintStart_toStartOf="@+id/cv_appointment_to_id"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_1" />

        <TextView
            android:id="@+id/cv_pts_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="課程種類:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_3"
            card_view:layout_constraintTop_toTopOf="@+id/cv_appointment_course_name" />

        <TextView
            android:id="@+id/cv_appointment_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="口說"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintStart_toStartOf="@+id/cv_appointment_end_time"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_2" />

        <TextView
            android:id="@+id/cv_pts_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="結束時間:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_6"
            card_view:layout_constraintTop_toTopOf="@+id/cv_appointment_teacherName" />

        <TextView
            android:id="@+id/cv_appointment_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="2019-07-07 21:00"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_appointment_start_time"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_3" />

        <TextView
            android:id="@+id/cv_pts_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="預約編號:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_appointment_to_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="C00100"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintStart_toEndOf="@+id/cv_pts_4"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_4" />

        <TextView
            android:id="@+id/cv_pts_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="課程語言:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_1"
            card_view:layout_constraintTop_toBottomOf="@+id/cv_pts_1" />

        <TextView
            android:id="@+id/cv_appointment_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right|end"
            android:text="英文"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintStart_toStartOf="@+id/cv_appointment_teacherName"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_5" />


        <TextView
            android:id="@+id/cv_pts_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="開始時間:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/cv_appointment_to_id"
            card_view:layout_constraintTop_toTopOf="@+id/cv_appointment_to_id" />

        <TextView
            android:id="@+id/cv_appointment_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="2019-07-07 20:00"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_4" />

        <TextView
            android:id="@+id/cv_pts_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="狀態:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_5"
            card_view:layout_constraintTop_toBottomOf="@+id/cv_pts_5" />

        <TextView
            android:id="@+id/cv_appointment_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="老師尚未確認預約"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintStart_toStartOf="@+id/cv_appointment_course_name"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_7" />

        <TextView
            android:id="@+id/cv_pts_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="時數:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/cv_appointment_total_hour"
            card_view:layout_constraintTop_toTopOf="@+id/cv_appointment_category" />

        <TextView
            android:id="@+id/cv_appointment_total_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="2"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_appointment_end_time"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_8" />

        <Button
            android:id="@+id/cv_appointment_confirm_appointment"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_rounded_white"
            android:text="確認預約"
            android:textSize="11sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_appointment_state"
            card_view:layout_constraintEnd_toStartOf="@+id/cv_appointment_confirm_course" />

        <Button
            android:id="@+id/cv_appointment_confirm_course"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_rounded"
            android:text="完課確認"
            android:textSize="11sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_appointment_state"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_appointment_total_hour" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>