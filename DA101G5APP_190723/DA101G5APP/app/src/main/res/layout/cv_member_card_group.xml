<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_mcg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="5dp">

    <!-- cardCornerRadius：設定卡片邊角弧度-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="5dp">


        <TextView
            android:id="@+id/cv_mcg_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="小林老師會話課的單字牌組"
            android:textColor="#E76B95"
            android:textSize="17sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="3dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="老師:"
            android:textColor="#666666"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_mcg_teacher"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="松島菜菜子"
            android:textColor="#666666"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_mcg_last_review" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="單字數量:"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/cv_mcg_name" />

        <TextView
            android:id="@+id/cv_mcg_word_qty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="120"
            android:textColor="#9E9E9E"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView2"
            card_view:layout_constraintStart_toEndOf="@+id/textView2" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right|center"
            android:text="本日複習時間:"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:textStyle="italic"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_mcg_last_review"
            card_view:layout_constraintEnd_toStartOf="@+id/cv_mcg_last_review" />

        <TextView
            android:id="@+id/cv_mcg_last_review"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right|center"
            android:text="2019-07-04 12:57"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:textStyle="italic"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />




    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>