<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/shape_left_nav_header"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.CardView
        android:id="@+id/nav_header_friend_pic_cv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:innerRadius="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardElevation="5dp">

        <ImageView

            android:id="@+id/nav_header_friend_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/logo"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/nv_header_member_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text="ryanynn"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toTopOf="@+id/nv_header_mem_email"
        app:layout_constraintStart_toStartOf="@+id/nv_header_mem_nick" />

    <TextView
        android:id="@+id/nv_header_mem_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:paddingTop="4dp"
        android:text="菜菜子"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nv_header_member_id"
        app:layout_constraintStart_toEndOf="@+id/nav_header_friend_pic_cv" />

    <TextView
        android:id="@+id/nv_header_mem_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:paddingBottom="10dp"
        android:text="ryanynn@sdasdasdasd.cccc"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_friend_pic_cv"
        app:layout_constraintStart_toEndOf="@+id/nav_header_friend_pic_cv" />

    <ImageView
        android:id="@+id/nav_header_point_pic"
        android:layout_width="33dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toTopOf="@+id/nv_header_mem_nick"
        app:layout_constraintStart_toEndOf="@+id/nav_header_friend_pic_cv"
        app:srcCompat="@drawable/ic_monetization_on_black_24dp" />

    <TextView
        android:id="@+id/nav_header_mem_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="4dp"
        android:text="100000"
        android:textAlignment="center"
        android:textColor="#DF0000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_point_pic"
        app:layout_constraintStart_toEndOf="@+id/nav_header_point_pic"
        app:layout_constraintTop_toTopOf="@+id/nav_header_point_pic" />
</android.support.constraint.ConstraintLayout>