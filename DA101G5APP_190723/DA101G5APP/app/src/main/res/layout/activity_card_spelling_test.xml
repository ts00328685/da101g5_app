<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".card.CardActivitySpellingTest"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/act_card_spelling_test_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E8E8"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".card.CardActivityMultiChoice"
        tools:showIn="@layout/activity_card_voice_test">

        <TextView
            android:id="@+id/act_card_spelling_test_correctSign"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="24dp"
            android:elevation="30dp"
            android:gravity="center"
            android:text="✔"
            android:textColor="#4CAF50"
            android:textSize="180sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView6"
            app:layout_constraintEnd_toEndOf="@+id/cardView6"
            app:layout_constraintHorizontal_bias="0.234"
            app:layout_constraintStart_toStartOf="@+id/cardView6"
            app:layout_constraintTop_toTopOf="@+id/cardView6"
            app:layout_constraintVertical_bias="0.705"
            android:alpha="0"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/act_card_spelling_test_wrongSign"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="24dp"
            android:elevation="30dp"
            android:gravity="center"
            android:text="❌"
            android:textColor="#FA8A83"
            android:textSize="135sp"
            android:visibility="invisible"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/cardView6"
            app:layout_constraintEnd_toEndOf="@+id/cardView6"
            app:layout_constraintHorizontal_bias="0.234"
            app:layout_constraintStart_toStartOf="@+id/cardView6"
            app:layout_constraintTop_toTopOf="@+id/cardView6"
            app:layout_constraintVertical_bias="0.705" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="✔"
                    android:textColor="#4CAF50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/act_card_spelling_test_correctNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="32"
                    android:textColor="#686868"
                    app:layout_constraintStart_toEndOf="@+id/textView22"
                    app:layout_constraintTop_toTopOf="@+id/textView22" />

                <TextView
                    android:id="@+id/act_card_spelling_test_wrongNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="32"
                    android:textColor="#686868"
                    app:layout_constraintStart_toEndOf="@+id/textView23"
                    app:layout_constraintTop_toTopOf="@+id/act_card_spelling_test_correctNum" />

                <TextView
                    android:id="@+id/act_card_spelling_test_total_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:text="100"
                    android:textColor="#686868"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView23"
                    app:layout_constraintEnd_toStartOf="@+id/act_card_spelling_test_slash"
                    app:layout_constraintTop_toTopOf="@+id/textView23" />

                <TextView
                    android:id="@+id/act_card_spelling_test_total_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="120"
                    android:textColor="#686868"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/act_card_spelling_test_slash"
                    app:layout_constraintTop_toTopOf="@+id/act_card_spelling_test_slash" />

                <TextView
                    android:id="@+id/act_card_spelling_test_slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#686868"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/act_card_spelling_test_counter"
                    app:layout_constraintStart_toStartOf="@+id/textView22"
                    app:layout_constraintTop_toTopOf="@+id/act_card_spelling_test_total_left" />

                <TextView
                    android:id="@+id/act_card_spelling_test_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="32"
                    android:textColor="#686868"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/act_card_spelling_test_glass" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="❌"
                    android:textColor="#FF6C9E"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView22"
                    app:layout_constraintStart_toEndOf="@+id/act_card_spelling_test_correctNum"
                    app:layout_constraintTop_toTopOf="@+id/textView22" />

                <TextView
                    android:id="@+id/act_card_spelling_test_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="⌛"
                    android:textColor="#916C00"
                    app:layout_constraintEnd_toStartOf="@+id/act_card_spelling_test_counter"
                    app:layout_constraintTop_toTopOf="@+id/textView22" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="35dp"
            app:cardCornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="30dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/act_card_spelling_test_speaker"
                    android:layout_width="36dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:background="@drawable/btn_rounded"
                    android:text="🔊"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/text_cardview3"
                    app:layout_constraintTop_toBottomOf="@+id/text_cardview3" />

                <Button
                    android:id="@+id/act_card_spelling_test_refresh"
                    android:layout_width="36dp"
                    android:layout_height="34dp"
                    android:layout_gravity="end"
                    android:background="@drawable/btn_circle_white"
                    android:text="🔄"
                    android:textColor="#555555"
                    app:layout_constraintStart_toStartOf="@+id/text_cardview3"
                    app:layout_constraintTop_toTopOf="@+id/act_card_spelling_test_speaker" />

                <android.support.v7.widget.CardView
                    android:id="@+id/text_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:elevation="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    />

                    <TextView
                        android:id="@+id/act_card_spelling_test_choice_ans_area"
                        android:layout_width="260dp"
                        android:layout_height="130dp"
                        android:background="@drawable/shape_border_rounded"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="笨拙的、白癡"
                        android:textColor="#494949"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/text_cardview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:elevation="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_cardview"
                    app:layout_constraintStart_toStartOf="@+id/text_cardview"
                    app:layout_constraintTop_toBottomOf="@+id/text_cardview">

                    <TextView
                        android:id="@+id/act_card_spelling_test_word"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="apple pie"

                        android:textColor="#494949"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/text_cardview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:elevation="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_cardview2"
                    app:layout_constraintStart_toStartOf="@+id/text_cardview2"
                    app:layout_constraintTop_toBottomOf="@+id/text_cardview2">

                    <TextView
                        android:id="@+id/act_card_spelling_test_pron"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="[app'lle]"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/act_card_spelling_test_rv"
                    android:layout_width="260dp"
                    android:layout_height="0dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:foregroundGravity="center_horizontal|center_vertical"
                    android:padding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/act_card_spelling_test_speaker"></android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>