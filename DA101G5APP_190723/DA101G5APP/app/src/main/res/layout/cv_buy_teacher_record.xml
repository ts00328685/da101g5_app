<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:elevation="10dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="3dp">

    <!-- cardCornerRadius：設定卡片邊角弧度-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/cv_pts_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="老師:"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.921" />

        <TextView
            android:id="@+id/cv_buyTeacherTab_teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="施樂融"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_buyTeacherTab_co_id"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_1" />

        <TextView
            android:id="@+id/cv_pts_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="購買時數:"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_5"
            card_view:layout_constraintTop_toTopOf="@+id/cv_buyTeacherTab_teacherName" />

        <TextView
            android:id="@+id/cv_buyTeacherTab_buy_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="100"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_buyTeacherTab_co_total"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_2" />

        <TextView
            android:id="@+id/cv_pts_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="46dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="剩餘時數:"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/cv_buyTeacherTab_buy_hour" />

        <TextView
            android:id="@+id/cv_buyTeacherTab_remain_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="100"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_buyTeacherTab_co_unit_price"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_2" />

        <TextView
            android:id="@+id/cv_pts_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="訂單編號:"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/cv_pts_1"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_1" />

        <TextView
            android:id="@+id/cv_buyTeacherTab_co_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="C00100"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            card_view:layout_constraintStart_toEndOf="@+id/cv_pts_4"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_4" />

        <TextView
            android:id="@+id/cv_pts_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="訂單總金額:"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/cv_buyTeacherTab_co_id"
            card_view:layout_constraintTop_toTopOf="@+id/cv_buyTeacherTab_co_id" />

        <TextView
            android:id="@+id/cv_buyTeacherTab_co_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right|end"
            android:text="50000"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toStartOf="@+id/cv_pts_6"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_4" />


        <TextView
            android:id="@+id/cv_pts_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="時數單價:"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_pts_3"
            card_view:layout_constraintTop_toTopOf="@+id/cv_buyTeacherTab_co_id" />

        <TextView
            android:id="@+id/cv_buyTeacherTab_co_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:layout_marginEnd="6dp"
            android:text="500"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/cv_pts_4" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>