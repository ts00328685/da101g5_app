<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher.TeacherDetailActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="16dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="2dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/atd_teacher_name">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="🇹🇼"
                    android:textAlignment="center"
                    android:textSize="22sp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:innerRadius="20dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:contentPadding="2dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:layout_constraintCircleRadius="2dp"

                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/atd_teacher_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/atd_teacher_star"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:rating="3"
                android:theme="@style/RatingBar"
                app:layout_constraintStart_toStartOf="@+id/atd_teacher_language"
                app:layout_constraintTop_toBottomOf="@+id/atd_teacher_name" />


            <TextView
                android:id="@+id/atd_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|bottom"
                android:text="林清妙"
                android:textColor="#666666"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/atd_teacher_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="妙妙解"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/atd_teacher_name"
                app:layout_constraintStart_toEndOf="@+id/atd_teacher_name" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="right|center"
                android:text="教授語言"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/atd_teacher_name"
                app:layout_constraintTop_toBottomOf="@+id/atd_teacher_star" />

            <TextView
                android:id="@+id/atd_teacher_language"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="英文"
                android:textColor="#666666"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="right|center"
                android:text="來自"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/atd_teacher_country"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="台灣"
                android:textColor="#666666"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/atd_teacher_language" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="每小時點數"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <TextView
                android:id="@+id/atd_teacher_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:outlineAmbientShadowColor="#000000"
                android:text="700"
                android:textColor="#F10E0E"
                android:textSize="20dp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/atd_teacher_country" />

            <Button
                android:id="@+id/atd_buy_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/btn_rounded"
                android:text="購買時數"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/atd_teacher_language"
                app:layout_constraintTop_toBottomOf="@+id/atd_teacher_country" />

            <Button
                android:id="@+id/atd_contact_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_rounded"
                android:text="聯繫老師"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/atd_buy_btn"
                app:layout_constraintEnd_toEndOf="@+id/atd_teacher_price"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/atd_buy_btn" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="總評價分數:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="已完成課堂數:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/act_teacher_detail_apprasal_count"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/act_teacher_detail_accum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="99"
                android:textColor="#5A5A5A"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/divider" />


            <TextView
                android:id="@+id/act_teacher_detail_apprasal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="99"
                android:textColor="#5A5A5A"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/atd_contact_btn"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/atd_buy_btn"
                tools:layout_editor_absoluteX="8dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                tools:layout_editor_absoluteX="0dp" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="parent">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:text="教育背景"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/atd_teacher_ed_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:elevation="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:outlineAmbientShadowColor="#000000"
                        android:text="2011 - 2015 國立東華大學 英語文學研究所

    2006 - 2009 國立東華大學 英語文學系"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:text="資格證照"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/atd_teacher_ed_background"
                        app:layout_constraintTop_toBottomOf="@+id/atd_teacher_ed_background" />

                    <TextView
                        android:id="@+id/atd_teacher_cert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:elevation="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:outlineAmbientShadowColor="#000000"
                        android:text="教育部核發大專院校講師證資格證書

    TCSOL華語國際教學證書"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:text="工作經歷"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/atd_teacher_cert"
                        app:layout_constraintTop_toBottomOf="@+id/atd_teacher_cert" />

                    <TextView
                        android:id="@+id/atd_teacher_work_ex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:elevation="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:lineSpacingExtra="6dp"
                        android:lineSpacingMultiplier="1"
                        android:outlineAmbientShadowColor="#000000"
                        android:text="2012 - 2018 國立高雄科技大學 | 1.英文1234级 2.觀光英文 3.新聞英文 4.國際議題講師
    2011 - 2012 國立東華大學 | 1.英文閱讀 2.英文口說 3."
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@+id/textView8"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:text="自我介紹"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/atd_teacher_work_ex"
                        app:layout_constraintTop_toBottomOf="@+id/atd_teacher_work_ex" />

                    <TextView
                        android:id="@+id/atd_teacher_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:elevation="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:lineSpacingExtra="6dp"
                        android:lineSpacingMultiplier="1"
                        android:outlineAmbientShadowColor="#000000"
                        android:text="asdasd"
                        android:textSize="16dp"

                        app:layout_constraintStart_toStartOf="@+id/textView9"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />
                </android.support.constraint.ConstraintLayout>
            </ScrollView>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>