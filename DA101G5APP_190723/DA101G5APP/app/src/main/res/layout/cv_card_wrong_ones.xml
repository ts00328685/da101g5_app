<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="5dp">

    <!-- cardCornerRadius：設定卡片邊角弧度-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp">


        <TextView
            android:id="@+id/cv_card_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|top"
            android:text="antibiotic"
            android:textColor="#E6A901"
            android:textSize="17sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_card_phonetic_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|top"
            android:text="[Antibai`Ctik]"
            android:textColor="#B8B8B8"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_word"
            card_view:layout_constraintStart_toEndOf="@+id/cv_card_word"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_word" />

        <TextView
            android:id="@+id/cv_card_native_explain"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="反對-t--抗-t--bio生-t--生物-----ic名詞後綴)n.抗生素"
            android:textColor="#7E7E7E"
            android:textSize="14sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/cv_card_word"
            card_view:layout_constraintTop_toBottomOf="@+id/cv_card_word" />

        <TextView
            android:id="@+id/cv_card_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="✔"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/cv_card_word" />

        <TextView
            android:id="@+id/cv_card_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="❌"
            android:textColor="#FD6060"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="invisible"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_check"
            card_view:layout_constraintStart_toEndOf="@+id/cv_card_rightNum"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_check" />

        <TextView
            android:id="@+id/cv_card_wrongNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="10"
            android:textColor="#FF0000"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_rightNum"
            card_view:layout_constraintStart_toEndOf="@+id/cv_card_xxxx4"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_rightNum"
            card_view:layout_constraintVertical_bias="0.888" />

        <TextView
            android:id="@+id/cv_card_xxxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="最後複習時間:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_rightNum"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_rightNum"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cv_card_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="87%"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:visibility="invisible"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_rightNum"
            card_view:layout_constraintStart_toEndOf="@+id/cv_card_xxxx4"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_rightNum"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cv_card_xxxx4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="待消除錯誤次數:"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            android:visibility="visible"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_rightNum"
            card_view:layout_constraintStart_toStartOf="@+id/cv_card_check"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_rightNum"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cv_card_last_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="2019-10-10 10:10"
            android:textColor="#7E7E7E"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_rightNum"
            card_view:layout_constraintEnd_toEndOf="@+id/cv_card_voiceBtn"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_rightNum"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cv_card_rightNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:text="50"
            android:textColor="#7E7E7E"
            android:visibility="invisible"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_card_check"
            card_view:layout_constraintStart_toEndOf="@+id/cv_card_check"
            card_view:layout_constraintTop_toTopOf="@+id/cv_card_check" />

        <Button
            android:id="@+id/cv_card_voiceBtn"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/btn_rounded"
            android:text="🔊"
            android:textColor="#FFFFFF"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>